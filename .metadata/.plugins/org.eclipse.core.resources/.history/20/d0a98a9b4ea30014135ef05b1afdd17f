import java.awt.*;

import javax.swing.JPanel;

public class Shapes extends JPanel{

	private int shapeChoice;
	private int shapeSize;
	private int numAcross;
	private int numDown;
	private int shapeChoice;
	private int shapeSize;

	public Shapes( int tileChoice, int tileSize)
	{
		//using the same variables
		
		shapeChoice = tileChoice;
		shapeSize = tileSize;
		numAcross = getWidth() / shapeSize;
		numDown = getHeight() / shapeSize;
	}
	
	public void paintComponent(Graphics g)
	{
		super.paintComponent( g );
	      
	      g.setColor(Color.red);
	      
	      for ( int i = 0; i < numDown; i += shapeSize )
	      {
	    	  for ( int j = 0; j < numAcross; j += shapeSize)
	    	  {
	    		  
	         // pick the shape based on the user's choice
	    		  switch ( shapeChoice )
                  {
                  	case 1: //draw two 90 degree arcs
                  		//(x, y, width, height, startAngle, Angle) 
                  		g.drawArc(j, i, shapeSize, shapeSize, 10, 10 );
                  		g.drawArc(j, i, shapeSize, shapeSize, 10, 10 );
                  		break;
                    default:
                    	g.drawLine( 10 + i * 10, 60 + i * 20, 
                                60 + i * 20, 10 + i * 10 );
                        break;
                  }
	    	  } // end switch
	      } // end for
	      
	      // added by Zhang
	      int x=20;
	      int y=getHeight()-20;
	      if (shapeChoice==1) {
	    	  g.drawString("Arcs drawn", x, y);
	      }
	      else if (shapeChoice==2) {
	    	  g.drawString("10 circles drawn", x, y);
	      }
	      else if (shapeChoice==3) {
	    	  g.drawString("10 rectangles filled", x, y);
	      }
	      else if (shapeChoice==4) {
	    	  g.drawString("10 circles filled", x, y);
	      }
	      else {
	    	  g.drawString("10 lines drawn", x, y);    	 
	      }
	      shapeChoice=(shapeChoice+1)%5;
	      // end of addition
	}
}
