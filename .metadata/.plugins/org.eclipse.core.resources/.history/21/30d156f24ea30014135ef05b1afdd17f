import java.awt.*;

import javax.swing.JPanel;

public class Shapes extends JPanel{

	private int choice;
	private int numAcross;
	private int numDown;
	private int size;

	public Shapes( int tileChoice, int tileSize)
	{
		//using the same variables
		
		choice = tileChoice;
		size = tileSize;
		numAcross = getWidth() / size;
		numDown = getHeight() / size;
	}
	
	public void paintComponent(Graphics g)
	{
		super.paintComponent( g );
	      
	      g.setColor(Color.red);
	      
	      for ( int i = 0; i < numDown; i += size )
	      {
	    	  for ( int j = 0; j < numAcross; j += size)
	    	  {
	    		  
	         // pick the shape based on the user's choice
	    		  switch ( choice )
                  {
                  	case 1: //draw two 90 degree arcs
                  		//(x, y, width, height, startAngle, Angle) 
                  		g.drawArc(j, i, size, size, 0, 90 );
                  		g.drawArc(j, i, size, size, 0, 90 );
                  		break;
                    default:
                    	g.drawLine( 10 + i * 10, 60 + i * 20, 
                                60 + i * 20, 10 + i * 10 );
                        break;
                  }
	    	  } // end switch
	      } // end for
	      
	      // added by Zhang
	      int x=20;
	      int y=getHeight()-20;
	      if (choice==1) {
	    	  g.drawString("Arcs drawn", x, y);
	      }
	      else if (choice==2) {
	    	  g.drawString("10 circles drawn", x, y);
	      }
	      else if (choice==3) {
	    	  g.drawString("10 rectangles filled", x, y);
	      }
	      else if (choice==4) {
	    	  g.drawString("10 circles filled", x, y);
	      }
	      else {
	    	  g.drawString("10 lines drawn", x, y);    	 
	      }
	      choice=(choice+1)%5;
	      // end of addition
	}
}
